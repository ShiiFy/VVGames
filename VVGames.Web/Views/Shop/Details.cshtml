@model VVGames.Web.Models.GameDetailsViewModel

@{
    ViewBag.Title = Model.Name;
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>@Model.Name</h3>
                <span class="breadcrumb">
                    <a href="@Url.Action("Index", "Home")">Home</a>  >
                    <a href="@Url.Action("Shop", "Shop")">Shop</a>  >
                    @Model.Name
                </span>
            </div>
        </div>
    </div>
</div>

<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-image">
                    <img src="@Model.ImageUrl" alt="@Model.Name">
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <h4>@Model.Name</h4>
                <span class="price">@Model.Price.ToString("F2") $</span>
                <p class="lead">@Model.ShortDescription</p>

                @using (Html.BeginForm("Add", "Basket", FormMethod.Post, new { @class = "d-flex align-items-center" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("productId", Model.Id)

                    <div class="input-group mr-2" style="width:120px;">
                        <input type="number"
                               name="quantity"
                               value="1"
                               min="1"
                               class="form-control form-control-sm"
                               aria-label="Количество" />
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-shopping-bag"></i> ADD TO CART
                    </button>
                }

                <ul class="mt-4">
                    <li><span>Game ID:</span> @Model.Articul</li>
                    <li><span>Genre:</span> @Model.Genres</li>
                    <li><span>Release Date:</span> @Model.ReleaseDate.ToString("dd.MM.yyyy")</li>
                </ul>
            </div>
            <div class="col-lg-12">
                <div class="sep"></div>
            </div>
        </div>
    </div>
</div>

<div class="more-info">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        <div class="nav-wrapper">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active"
                                            id="description-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#description"
                                            type="button"
                                            role="tab"
                                            aria-controls="description"
                                            aria-selected="true">
                                        Description
                                    </button>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active"
                                 id="description"
                                 role="tabpanel"
                                 aria-labelledby="description-tab">
                                <p>@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
