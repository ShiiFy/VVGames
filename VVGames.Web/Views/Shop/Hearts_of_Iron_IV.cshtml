<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-image">
                    <img src="~/content/images/games/Hearts_Of_Iron_IV.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <h4>Herats of Iron IV</h4>
                <span class="price"><em>$30</em> $10</span>
