
@{
    ViewData["Title"] = "Reg";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Registration</h3>
                <span class="breadcrumb"><a href="#">Home</a>  >  Registration</span>
            </div>
        </div>
    </div>
</div>

<!-- ***** wheel of fortune***** -->
<div class="contact-page section">
    <div class="contact-page-container">
        <div class="register-form-conteiner">
            <h1 class="form-title">Registration</h1>
            <div class="form-fields">
                <div class="form-field">
                    <input type="text" placeholder="username">
                </div>
                <div class="form-field">
                    <input type="text" placeholder="name">
                </div>
                <div class="form-field">
                    <input type="text" placeholder="email">
                </div>
                <div class="form-field">
                    <input type="text" placeholder="password">
                </div>
                <div class="form-field">
                    <input type="text" placeholder="confirm password">
                </div>
            </div>
            <div class="form-buttons">
                <button class="button">Registration</button>
                <div class="diveder">Or</div>
                @Html.ActionLink("log in", "Sing", "Auth", new { area = "" }, new { @class = "button-log" })
            </div>
        </div>
    </div>
    <!-- /.contact-page-container -->
</div>

