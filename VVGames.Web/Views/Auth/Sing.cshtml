@{
    ViewData["Title"] = "Sing";
}

@if (Session["AuthMessage"] != null)
{
    <div id="authMessage" class="alert alert-warning text-center">
        @Session["AuthMessage"]
    </div>
    Session["AuthMessage"] = null;
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Login</h3>
                <span class="breadcrumb"><a href="#">Home</a>  >  Login</span>
            </div>
        </div>
    </div>
</div>

<div class="contact-page section">
    <div class="wrapper">
        <h1>Hello!</h1>
        <p>
            Welcome back!<br />
            We missed you!
        </p>

        @using (Html.BeginForm("Sing", "Auth", FormMethod.Post))
        {
            <input type="text" name="credential" placeholder="Enter your username or email" required />
            <input type="password" name="password" placeholder="Enter your password" required />
            <p class="recover">
                <a href="#">Forget the password?</a>
            </p>
            <button type="submit">LOG IN</button>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger mt-2">@ViewBag.Message</div>
        }

        <p class="or">---------log in via social networks----------</p>
        <div class="icons">
            <i class="fab fa-google"></i>
            <i class="fab fa-facebook"></i>
        </div>
        <div class="sinup">
            Don't have an account?
            @Html.ActionLink("Register", "Reg", "Auth", null, new { @class = "sinup" })
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        var msg = document.getElementById("authMessage");
        if (msg) {
            msg.style.opacity = "0";
            setTimeout(function () {
                msg.style.display = "none";
            }, 500); // дождаться плавного скрытия
        }
    }, 2000); // показать 2 секунды
</script>
