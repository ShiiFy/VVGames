<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - V_V_GameHub</title>

    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <!-- Bootstrap core CSS -->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>

    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="@Url.Action("Index", "Home")" class="logo">
                            <img src="~/Content/images/logo.png" alt="" style="width: 158px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="@Url.Action("Index", "Home")" class="nav-link text-center d-flex align-items-center justify-content-center">Home</a></li>
                            <li><a href="@Url.Action("Shop", "Home")" class="nav-link d-flex align-items-center justify-content-center">V&V Games</a></li>
                            <li><a href="@Url.Action("Wheel", "Home")" class="nav-link d-flex align-items-center justify-content-center">Wheel of fortune</a> </li>
                            <li><a href="@Url.Action("Contact", "Home")" class="nav-link d-flex align-items-center justify-content-center">Contact Us</a></li>
                            <li>
                                @if (Session["UserId"] != null)
                                {
                                    var username = (string)Session["Username"];
                                    var displayName = username.Length > 12 ? username.Substring(0, 10) + "…" : username;

                                    <a href="@Url.Action("UserProfile", "Auth")" class="btn btn-outline-light me-2 d-flex align-items-center justify-content-center">
                                        @displayName
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Sing", "Auth")" class="btn btn-outline-light me-2 d-flex align-items-center justify-content-center">Sign in</a>
                                }

                            </li>
                        </ul>
                        <a href="@Url.Action("Basket", "Home")" class="nav__link">
                            <img src="~/Content/images/shop-cart.svg" alt="image: shopping cart" class="nav__image">
                        </a>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="col-lg-12">
                <p>Copyright © 2025 V&V GameHub Company. All rights reserved. &nbsp;&nbsp; Design: V&V</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/JSFails")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
